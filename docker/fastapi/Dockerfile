FROM python:3.12-slim

WORKDIR /app

COPY docker/fastapi/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY alembic/ alembic/
COPY alembic.ini .
COPY app/ app/
COPY entrypoint.sh .

RUN chmod +x entrypoint.sh

ENV PYTHONPATH=/app

CMD ["bash", "/app/entrypoint.sh"]